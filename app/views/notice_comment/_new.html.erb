<%= form_for @notice_comment, :url => notice_comment_index_path(@notice_comment), :action => "create", :html => {:class => "form form-horizontal", :method => :post} do |f| %>
  <%= f.text_field :content , class: "form-control", id: "comment_input", placeholder: "댓글", :required => false, autofocus: true %>
  <%= hidden_field_tag(:user_id, current_user.id) %>
  <%= hidden_field_tag(:post_id, @post.id) %>
  <%= f.submit "제출", class: "btn btn-default" %>
<% end %>
