<div style="padding:10px"> </div>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
    <%= form_for @post, :html => {:class => 'form-horizontal'}, url: {action: "create"} do |f| %>
    <div>
      <div class="form-group">
        <%= f.label "제목", :class => "col-sm-2 control-label", for: "selectgrade" %>
        <div class="col-xs-12 col-sm-10">
          <%= f.text_field :title , class: "form-control", placeholder: "타이틀", :required => true, autofocus: true, :maxlength => 20 %>
        </div>
      </div>

      <div class="form-group">
        <!-- <%= f.label "작성자", :class => "col-sm-2 control-label", for: "selectgrade" %> -->
        <div class="col-xs-12 col-sm-10">
          <% if current_user %>
            <%= hidden_field_tag(:author, current_user.username) %>
            <%= hidden_field_tag(:post_flag, 0) %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "공지 대상", :class => "col-sm-2 control-label", for: "selectgrade" %>
        <div class="col-xs-12 col-sm-10">
         <%= f.select :grade, options_for_select([["전체", 0],["1학년", 1], ["2학년", 2], ["3학년", 3], ["4학년",4]]), {}, { :class => 'form-control'} %>
        </div>
      </div>
    </div>
      <div class="form-group">
        <%= f.cktext_area :content, rows: 10, :required => true %>
      </div>
      <%= hidden_field_tag(:user_id, current_user.id) %>
      <div class="pull-right">
        <%= link_to("뒤로 가기", :back, class: "btn btn-default", role: "button") %>
        <%= f.submit "제출", class: "btn btn-default" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div style="padding:5px"> </div>
