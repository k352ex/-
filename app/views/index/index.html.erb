<!-- Stack the columns on mobile by making one full-width and the other half-width -->
<div class="row">
  <div class="col-xs-12 col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>학과공지</th>
          <th>공지사항</th>
          <th>작성자 </th>
          <th>작성일자</th>
        </tr>
      </thead>
      <tbody>
        <% @post.reverse.each do |p| %>
        <tr>
          <th scope="row"> <%= p.id %> </th>
            <td> <%= p.title %> </td>
            <td> <%= p.author %></td>
            <td> <%= p.updated_at %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
