<div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <h2>회원 가입</h2>
          <%= form_for(resource, :html => {:class => 'form-horizontal'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :Email, :class => "col-sm-2 control-label", for: "inputEmail3" %>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, id:"inputEmail3" , :class => "form-control", placeholder: "이메일" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password , :class => "col-sm-2 control-label", for: "inputPassword3"%>
              <div class="col-sm-10">
                <% if @minimum_password_length %>
                <!-- <em>( 최소 <%= @minimum_password_length %> 자리 이상 )</em>-->
                <% end %>
                <%= f.password_field :password, autocomplete: "off", :class => "form-control", id: "inputPassword3", placeholder: "비밀번호는 최소 8자리 이상" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, :class => "col-sm-2 control-label", for: "inputPassword3" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", id: "inputPassword3", placeholder: "비밀번호 재확인" %>
              </div>
            </div>

            <!-- 학년 선택 -->
            <!-- 나중에 레일즈 select_tag로 변경하기 -->
            <div class="form-group">
              <%= f.label :Grade, :class => "col-sm-2 control-label", for: "selectgrade" %>
              <div class="col-sm-10">
               <select class="form-control", id="selectgrade", >
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                </select>
              </div>
            </div>
           
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="actions">
                  <%= f.submit("Sign up",:class => "btn btn-default") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-2"></div>
</div>  

